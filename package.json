{
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "devDependencies": {
    "@graphql-codegen/cli": "^1.11.2",
    "@graphql-codegen/typescript": "^1.11.2",
    "@graphql-codegen/typescript-operations": "^1.11.2",
    "@graphql-codegen/typescript-react-apollo": "^1.11.2",
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "concurrently": "^5.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "graphql": "^14.5.8",
    "lerna": "^3.20.2",
    "prettier": "^1.19.1",
    "typescript": "^3.7.4"
  },
  "scripts": {
    "build": "yarn build:libs && yarn build:server && yarn build:web",
    "build:server": "yarn --cwd apps/server tsc",
    "build:web": "yarn --cwd apps/web build",
    "build:libs": "yarn build:lib:hooks && yarn build:lib:i18n && yarn build:lib:interfaces && yarn build:lib:validation",
    "build:lib:hooks": "yarn --cwd libs/hooks tsc",
    "build:lib:i18n": "yarn --cwd libs/i18n tsc",
    "build:lib:interfaces": "yarn --cwd libs/interfaces tsc",
    "build:lib:validation": "yarn --cwd libs/validation tsc",
    "clean:libs": "rimraf ./libs/*/lib && rimraf ./libs/*/types && rimraf ./libs/*/tsconfig.tsbuildinfo",
    "rebuild:libs": "yarn clean:libs && yarn build:libs",
    "db:up": "yarn db:first && node sleep.js 10 && yarn db:create",
    "db:down": "yarn db:stop && node sleep.js 1 && yarn db:rm",
    "db:first": "docker run --name form-postgres -e POSTGRES_PASSWORD=ozokudev -p 5432:5432 -d postgres:11",
    "db:start": "docker start form-postgres",
    "db:stop": "docker stop form-postgres",
    "db:create": "docker exec -it form-postgres runuser -l postgres -c \"createdb form-db\"",
    "db:rm": "docker rm form-postgres",
    "dev:all": "concurrently -n dev: npm:dev:*",
    "dev:server": "yarn --cwd apps/server dev",
    "dev:dbwserver": "yarn db:up && yarn dev:server",
    "dev:db": "yarn db:up && pause && yarn:db:down",
    "dev:web": "yarn --cwd apps/web start",
    "dev:libs": "concurrently -n libs: npm:devlib-*",
    "devlib-hooks": "yarn --cwd libs/hooks tsc --watch",
    "devlib-i18n": "yarn --cwd libs/i18n tsc --watch",
    "devlib-interfaces": "yarn --cwd libs/interfaces tsc --watch",
    "devlib-validation": "yarn --cwd libs/validation tsc --watch",
    "generate:web": "yarn --cwd apps/web generate",
    "lint": "eslint --ext ts,tsx,js ."
  }
}
