{
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "concurrently": "^5.0.0",
    "eslint": "^6.4.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "lerna": "^3.16.4",
    "prettier": "^1.18.2",
    "typescript": "^3.6.3"
  },
  "scripts": {
    "db:up": "yarn db:start && node sleep.js 10 && yarn db:create",
    "db:down": "yarn db:stop && node sleep.js 1 && yarn db:rm",
    "db:start": "docker run --name form-postgres -e POSTGRES_PASSWORD=ozokudev -p 5432:5432 -d postgres",
    "db:create": "docker exec -it form-postgres runuser -l postgres -c \"createdb form-db\"",
    "db:stop": "docker stop form-postgres",
    "db:rm": "docker rm form-postgres",
    "dev:all": "concurrently -n dev: npm:dev:*",
    "dev:server": "yarn db:up && yarn --cwd apps/server dev",
    "dev:web": "yarn --cwd apps/web start",
    "dev:libs": "concurrently -n libs: npm:devlib-*",
    "devlib-hooks": "yarn --cwd libs/hooks tsc --watch",
    "devlib-i18n": "yarn --cwd libs/i18n tsc --watch",
    "devlib-interfaces": "yarn --cwd libs/interfaces tsc --watch",
    "devlib-validation": "yarn --cwd libs/validation tsc --watch"
  }
}
