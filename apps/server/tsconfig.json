{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "composite": true,
    "baseUrl": "src",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@entities/*": [
        "entity/*"
      ],
      "@resolvers/*": [
        "resolvers/*"
      ]
    },
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": [
    "src/**/*.ts"
  ],
  "references": [
    {
      "path": "../../libs/i18n"
    },
    {
      "path": "../../libs/interfaces"
    },
    {
      "path": "../../libs/validation"
    }
  ]
}
