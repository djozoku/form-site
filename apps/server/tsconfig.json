{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "composite": true,
    "baseUrl": "src",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@module/*": [
        "modules/*"
      ]
    },
    "outDir": "dist",
    "rootDir": "src",
    "types": [
      "bcryptjs",
      "cookie-parser",
      "cors",
      "dotenv",
      "express",
      "jsonwebtoken",
      "node",
      "nodemailer",
      "pg",
      "sql-bricks",
      "uuid"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "references": [
    {
      "path": "../../libs/i18n"
    },
    {
      "path": "../../libs/interfaces"
    },
    {
      "path": "../../libs/validation"
    }
  ]
}
